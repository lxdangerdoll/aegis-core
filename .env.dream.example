# =======================================================
# WhisperEngine Dream Bot Configuration
# Dream of the Endless Character Configuration
# =======================================================

# =======================================================
# DISCORD CONFIGURATION - DREAM SPECIFIC
# =======================================================
DISCORD_BOT_TOKEN=your_dream_discord_bot_token_here
DISCORD_BOT_NAME=Dream
ADMIN_USER_IDS=your_discord_user_id_here
DISCORD_MESSAGE_TRACE=false

# =======================================================
# ENVIRONMENT
# =======================================================
ENV_MODE=production
ENVIRONMENT=production
DEBUG_MODE=false
DEV_MODE=false
CONTAINER_MODE=true

# =======================================================
# DREAM CHARACTER CONFIGURATION
# =======================================================
CDL_DEFAULT_CHARACTER=characters/examples/dream_of_the_endless.json

# Multi-Entity Character System Features  
ENABLE_MULTI_ENTITY_RELATIONSHIPS=true
ENABLE_CHARACTER_CREATION=false
CHARACTER_ISOLATION_MODE=true

# =======================================================
# MEMORY SYSTEM
# =======================================================
MEMORY_SYSTEM_TYPE=vector
MEMORY_SYSTEM_HOST=qdrant
MEMORY_SYSTEM_PORT=6333
ENABLE_CONVERSATION_MEMORY=true
ENABLE_EPISODIC_MEMORY=true
ENABLE_SEMANTIC_MEMORY=true
MEMORY_RETENTION_DAYS=90

# =======================================================
# LLM CONFIGURATION
# =======================================================
LLM_CLIENT_TYPE=openrouter
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=meta-llama/llama-3.1-70b-instruct

# =======================================================
# VOICE CONFIGURATION
# =======================================================
VOICE_SERVICE_TYPE=discord_elevenlabs
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_dream_voice_id_here

# =======================================================
# ENGAGEMENT ENGINE
# =======================================================
ENGAGEMENT_ENGINE_TYPE=full
ENABLE_PROACTIVE_ENGAGEMENT=true
ENABLE_EMOTIONAL_INTELLIGENCE=true
ENABLE_CONTEXTUAL_RESPONSES=true

# =======================================================
# DATABASE CONFIGURATION (Shared Infrastructure)
# =======================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=whisper_engine
POSTGRES_USER=bot_user
POSTGRES_PASSWORD=your_postgres_password_here

# =======================================================
# REDIS CONFIGURATION (Shared Infrastructure)
# =======================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# =======================================================
# VECTOR DATABASE CONFIGURATION (Shared Infrastructure)
# =======================================================
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=dream_memories

# =======================================================
# LOGGING & MONITORING
# =======================================================
LOG_LEVEL=INFO
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
HEALTH_CHECK_PORT=9094
HEALTH_CHECK_HOST=0.0.0.0

# =======================================================
# MODEL CONFIGURATION
# =======================================================
MODEL_CACHE_DIR=/app/models
DISABLE_MODEL_DOWNLOAD=true
HF_HUB_OFFLINE=false
TRANSFORMERS_OFFLINE=0

# =======================================================
# SECURITY
# =======================================================
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS_PER_MINUTE=30
ENABLE_CONTENT_FILTERING=true
PRIVACY_MODE=enabled

# =======================================================
# PERFORMANCE
# =======================================================
PYTHONUNBUFFERED=1
MAX_CONCURRENT_REQUESTS=10
RESPONSE_TIMEOUT_SECONDS=30