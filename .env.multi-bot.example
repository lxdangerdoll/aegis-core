# =======================================================
# WhisperEngine Multi-Bot System Configuration
# Shared infrastructure for all bots with individual bot-specific configs
# =======================================================

# ðŸš€ MULTI-BOT DEPLOYMENT:
#   1. Copy this to .env.multi-bot
#   2. Create individual .env.{bot-name} files for each bot
#   3. Set all required secrets and keys
#   4. Deploy with ./multi-bot.sh start all

# =======================================================
# MULTI-BOT SYSTEM CONFIGURATION
# =======================================================
WHISPERENGINE_MODE=multi_bot
ENABLE_MULTI_BOT_QUERIES=true
MULTI_BOT_MEMORY_ISOLATION=true

# Supported Bots (comma-separated list)
ACTIVE_BOTS=Elena,Gabriel,Marcus,Dream,Marcus_Chen

# =======================================================
# SHARED INFRASTRUCTURE
# =======================================================
# Qdrant Vector Database (Shared across all bots)
VECTOR_QDRANT_HOST=qdrant
VECTOR_QDRANT_PORT=6333
VECTOR_QDRANT_GRPC_PORT=6334
VECTOR_QDRANT_COLLECTION=whisperengine_memory

# PostgreSQL Database (Shared)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=whisperengine_multi
POSTGRES_USER=whisperengine
POSTGRES_PASSWORD=your_secure_postgres_password_here

# Redis Cache (Shared)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here

# =======================================================
# SHARED MEMORY SYSTEM CONFIGURATION
# =======================================================
MEMORY_SYSTEM_TYPE=vector
VECTOR_EMBEDDING_MODEL=snowflake/snowflake-arctic-embed-xs

# Multi-Bot Memory Features
ENABLE_CONVERSATION_MEMORY=true
ENABLE_EPISODIC_MEMORY=true
ENABLE_SEMANTIC_MEMORY=true
MEMORY_RETENTION_DAYS=90

# Memory Performance (Multi-Bot Optimized)
ENABLE_MEMORY_MONITORING=true
MEMORY_OPTIMIZATION_LEVEL=production

# =======================================================
# SHARED LLM CONFIGURATION
# =======================================================
LLM_CLIENT_TYPE=openrouter
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=meta-llama/llama-3.1-70b-instruct

# =======================================================
# SHARED VOICE CONFIGURATION
# =======================================================
VOICE_SERVICE_TYPE=discord_elevenlabs
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# =======================================================
# SHARED CONVERSATION ENGINE
# =======================================================
ENGAGEMENT_ENGINE_TYPE=full
ENABLE_CONTEXT_INTELLIGENCE=true
ENABLE_EMOTIONAL_INTELLIGENCE=true
ENABLE_CONVERSATION_FLOW=true
ENABLE_PROACTIVE_ENGAGEMENT=true
ENABLE_CONTEXTUAL_RESPONSES=true

# =======================================================
# ADVANCED AI FEATURES (SHARED ACROSS ALL BOTS)
# =======================================================
# Memory Enhancement Features
ENABLE_MEMORY_DECAY_SYSTEM=true
ENABLE_MEMORY_SIGNIFICANCE_SCORING=true
ENABLE_EMOTIONAL_TRAJECTORY_TRACKING=true
ENABLE_MULTI_QUERY_RETRIEVAL=true

# Query Enhancement Features
ENABLE_QUERY_VARIATIONS=true
MAX_QUERY_VARIATIONS=3
QUERY_VARIATION_WEIGHT=0.8

# Phase AI Features
ENABLE_PHASE1_ENHANCED_MEMORY=true
ENABLE_PHASE2_THREE_TIER_MEMORY=true
ENABLE_PHASE3_MEMORY_NETWORKS=true
ENABLE_PHASE4_INTELLIGENCE=true
DISABLE_PHASE2_EMOTION=false

# Advanced Features
EXPERIMENTAL_FEATURES_ENABLED=true
BETA_MEMORY_FEATURES=true
BETA_CONVERSATION_FEATURES=true

# =======================================================
# SHARED LOGGING & MONITORING
# =======================================================
LOG_LEVEL=INFO
CONSOLE_LOG_LEVEL=INFO
PYTHONUNBUFFERED=1

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_LOG_LEVEL=info

# =======================================================
# DOCKER CONFIGURATION
# =======================================================
CONTAINER_MODE=true
VERSION=latest

# Health Check Configuration (Per-Bot Ports)
# Elena: 9091, Gabriel: 9092, Marcus: 9093, Dream: 9094, Marcus Chen: 9095

# =======================================================
# SECURITY CONFIGURATION
# =======================================================
ENV_MODE=production
ENVIRONMENT=multi_bot
DEBUG_MODE=false
DEV_MODE=false

# Admin Configuration (Shared across all bots)
ADMIN_USER_IDS=your_admin_user_ids_comma_separated

# =======================================================
# MULTI-BOT SPECIFIC FEATURES
# =======================================================
# Cross-Bot Features
ENABLE_CROSS_BOT_ANALYSIS=true
ENABLE_BOT_COLLABORATION=false
ENABLE_BOT_MEMORY_SHARING=false

# Bot Isolation Features
CHARACTER_ISOLATION_MODE=true
ENABLE_BOT_SPECIFIC_CONTEXTS=true

# =======================================================
# NOTES FOR BOT-SPECIFIC CONFIGURATIONS
# =======================================================
# Each bot needs its own .env.{bot-name} file with:
# - DISCORD_BOT_TOKEN (unique per bot)
# - DISCORD_BOT_NAME (Elena, Gabriel, Marcus, Dream, Marcus_Chen)
# - CDL_DEFAULT_CHARACTER (character file path)
# - ELEVENLABS_VOICE_ID (unique voice per bot)
# - HEALTH_CHECK_PORT (unique port per bot)
# 
# Bot-specific files:
# - .env.elena
# - .env.gabriel  
# - .env.marcus
# - .env.dream
# - .env.marcus-chen